{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/bridge/*": ["src/bridge/*"],
      "@/utils/*": ["src/utils/*"],
      "@/game/*": ["src/game/*"],
      "@/theme/*": ["src/theme/*"],
      "@/i18n/*": ["src/i18n/*"]
    }
  },
  "include": ["src"]
}
